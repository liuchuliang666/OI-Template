{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Git Pull",
            "type": "process",
            "command": "git",
            "args": [
                "pull"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "C++ Single File Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // 生成调试信息
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}